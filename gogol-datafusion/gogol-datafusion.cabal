cabal-version:      2.2
name:               gogol-datafusion
version:            0.5.0
synopsis:           Google Cloud Data Fusion SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  Cloud Data Fusion is a fully-managed, cloud native, enterprise data integration service for quickly building and managing data pipelines. It provides a graphical interface to increase time efficiency and reduce complexity, and allows business users, developers, and data scientists to easily and reliably build scalable data integration solutions to cleanse, prepare, blend, transfer and transform data without having to wrestle with infrastructure.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v1@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-datafusion

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.DataFusion
    Network.Google.DataFusion.Projects.Locations.Get
    Network.Google.DataFusion.Projects.Locations.Instances.Create
    Network.Google.DataFusion.Projects.Locations.Instances.Delete
    Network.Google.DataFusion.Projects.Locations.Instances.Get
    Network.Google.DataFusion.Projects.Locations.Instances.GetIamPolicy
    Network.Google.DataFusion.Projects.Locations.Instances.List
    Network.Google.DataFusion.Projects.Locations.Instances.Patch
    Network.Google.DataFusion.Projects.Locations.Instances.Restart
    Network.Google.DataFusion.Projects.Locations.Instances.SetIamPolicy
    Network.Google.DataFusion.Projects.Locations.Instances.TestIamPermissions
    Network.Google.DataFusion.Projects.Locations.List
    Network.Google.DataFusion.Projects.Locations.Operations.Cancel
    Network.Google.DataFusion.Projects.Locations.Operations.Delete
    Network.Google.DataFusion.Projects.Locations.Operations.Get
    Network.Google.DataFusion.Projects.Locations.Operations.List
    Network.Google.DataFusion.Projects.Locations.Versions.List
    Network.Google.DataFusion.Types

  other-modules:
    Network.Google.DataFusion.Internal.Product
    Network.Google.DataFusion.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
