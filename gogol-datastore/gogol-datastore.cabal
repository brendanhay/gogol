cabal-version:      2.2
name:               gogol-datastore
version:            0.5.0
synopsis:           Google Cloud Datastore SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  Accesses the schemaless NoSQL database to provide fully managed, robust, scalable storage for your application.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v1@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-datastore

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.Datastore
    Network.Google.Datastore.Projects.AllocateIds
    Network.Google.Datastore.Projects.BeginTransaction
    Network.Google.Datastore.Projects.Commit
    Network.Google.Datastore.Projects.Export
    Network.Google.Datastore.Projects.Import
    Network.Google.Datastore.Projects.Indexes.Create
    Network.Google.Datastore.Projects.Indexes.Delete
    Network.Google.Datastore.Projects.Indexes.Get
    Network.Google.Datastore.Projects.Indexes.List
    Network.Google.Datastore.Projects.Lookup
    Network.Google.Datastore.Projects.Operations.Cancel
    Network.Google.Datastore.Projects.Operations.Delete
    Network.Google.Datastore.Projects.Operations.Get
    Network.Google.Datastore.Projects.Operations.List
    Network.Google.Datastore.Projects.ReserveIds
    Network.Google.Datastore.Projects.Rollback
    Network.Google.Datastore.Projects.RunQuery
    Network.Google.Datastore.Types

  other-modules:
    Network.Google.Datastore.Internal.Product
    Network.Google.Datastore.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
