cabal-version:      2.2
name:               gogol-debugger
version:            0.5.0
synopsis:           Google Cloud Debugger SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  Examines the call stack and variables of a running application without stopping or slowing it down.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v2@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-debugger

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.Debugger
    Network.Google.Debugger.Clouddebugger.Controller.Debuggees.Breakpoints.List
    Network.Google.Debugger.Clouddebugger.Controller.Debuggees.Breakpoints.Update
    Network.Google.Debugger.Clouddebugger.Controller.Debuggees.Register
    Network.Google.Debugger.Clouddebugger.Debugger.Debuggees.Breakpoints.Delete
    Network.Google.Debugger.Clouddebugger.Debugger.Debuggees.Breakpoints.Get
    Network.Google.Debugger.Clouddebugger.Debugger.Debuggees.Breakpoints.List
    Network.Google.Debugger.Clouddebugger.Debugger.Debuggees.Breakpoints.Set
    Network.Google.Debugger.Clouddebugger.Debugger.Debuggees.List
    Network.Google.Debugger.Types

  other-modules:
    Network.Google.Debugger.Internal.Product
    Network.Google.Debugger.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
