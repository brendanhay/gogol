cabal-version:      2.2
name:               gogol-doubleclick-bids
version:            0.5.0
synopsis:           Google DoubleClick Bid Manager SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  DoubleClick Bid Manager API allows users to manage and create campaigns and reports.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v1.1@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-doubleclick-bids

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.DoubleClickBids
    Network.Google.DoubleClickBids.Doubleclickbidmanager.Queries.Createquery
    Network.Google.DoubleClickBids.Doubleclickbidmanager.Queries.Deletequery
    Network.Google.DoubleClickBids.Doubleclickbidmanager.Queries.Getquery
    Network.Google.DoubleClickBids.Doubleclickbidmanager.Queries.Listqueries
    Network.Google.DoubleClickBids.Doubleclickbidmanager.Queries.Runquery
    Network.Google.DoubleClickBids.Doubleclickbidmanager.Reports.Listreports
    Network.Google.DoubleClickBids.Types

  other-modules:
    Network.Google.DoubleClickBids.Internal.Product
    Network.Google.DoubleClickBids.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
