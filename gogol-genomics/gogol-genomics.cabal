cabal-version:      2.2
name:               gogol-genomics
version:            0.5.0
synopsis:           Google Genomics SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  Uploads, processes, queries, and searches Genomics data in the cloud.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v2alpha1@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-genomics

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.Genomics
    Network.Google.Genomics.Pipelines.Run
    Network.Google.Genomics.Projects.Operations.Cancel
    Network.Google.Genomics.Projects.Operations.Get
    Network.Google.Genomics.Projects.Operations.List
    Network.Google.Genomics.Projects.Workers.CheckIn
    Network.Google.Genomics.Types
    Network.Google.Genomics.Workers.CheckIn

  other-modules:
    Network.Google.Genomics.Internal.Product
    Network.Google.Genomics.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
