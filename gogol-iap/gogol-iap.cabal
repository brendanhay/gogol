cabal-version:      2.2
name:               gogol-iap
version:            0.5.0
synopsis:           Google Cloud Identity-Aware Proxy SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  Controls access to cloud applications running on Google Cloud Platform.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v1@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-iap

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.IAP
    Network.Google.IAP.GetIamPolicy
    Network.Google.IAP.GetIapSettings
    Network.Google.IAP.Projects.Brands.Create
    Network.Google.IAP.Projects.Brands.Get
    Network.Google.IAP.Projects.Brands.IdentityAwareProxyClients.Create
    Network.Google.IAP.Projects.Brands.IdentityAwareProxyClients.Delete
    Network.Google.IAP.Projects.Brands.IdentityAwareProxyClients.Get
    Network.Google.IAP.Projects.Brands.IdentityAwareProxyClients.List
    Network.Google.IAP.Projects.Brands.IdentityAwareProxyClients.ResetSecret
    Network.Google.IAP.Projects.Brands.List
    Network.Google.IAP.SetIamPolicy
    Network.Google.IAP.TestIamPermissions
    Network.Google.IAP.Types
    Network.Google.IAP.UpdateIapSettings

  other-modules:
    Network.Google.IAP.Internal.Product
    Network.Google.IAP.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
