cabal-version:      2.2
name:               gogol-partners
version:            0.5.0
synopsis:           Google Partners SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  Searches certified companies and creates contact leads with them, and also audits the usage of clients.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v2@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-partners

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.Partners
    Network.Google.Partners.Analytics.List
    Network.Google.Partners.ClientMessages.Log
    Network.Google.Partners.Companies.Get
    Network.Google.Partners.Companies.Leads.Create
    Network.Google.Partners.Companies.List
    Network.Google.Partners.GetPartnersstatus
    Network.Google.Partners.Leads.List
    Network.Google.Partners.Offers.History.List
    Network.Google.Partners.Offers.List
    Network.Google.Partners.Types
    Network.Google.Partners.UpdateCompanies
    Network.Google.Partners.UpdateLeads
    Network.Google.Partners.UserEvents.Log
    Network.Google.Partners.Users.CreateCompanyRelation
    Network.Google.Partners.Users.DeleteCompanyRelation
    Network.Google.Partners.Users.Get
    Network.Google.Partners.Users.UpdateProfile
    Network.Google.Partners.UserStates.List

  other-modules:
    Network.Google.Partners.Internal.Product
    Network.Google.Partners.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
