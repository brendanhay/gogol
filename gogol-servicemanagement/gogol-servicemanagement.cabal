cabal-version:      2.2
name:               gogol-servicemanagement
version:            0.5.0
synopsis:           Google Service Management SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  Google Service Management allows service producers to publish their services on Google Cloud Platform so that they can be discovered and used by service consumers.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v1@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-servicemanagement

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.ServiceManagement
    Network.Google.ServiceManagement.Operations.Get
    Network.Google.ServiceManagement.Operations.List
    Network.Google.ServiceManagement.Services.Configs.Create
    Network.Google.ServiceManagement.Services.Configs.Get
    Network.Google.ServiceManagement.Services.Configs.List
    Network.Google.ServiceManagement.Services.Configs.Submit
    Network.Google.ServiceManagement.Services.Consumers.GetIamPolicy
    Network.Google.ServiceManagement.Services.Consumers.SetIamPolicy
    Network.Google.ServiceManagement.Services.Consumers.TestIamPermissions
    Network.Google.ServiceManagement.Services.Create
    Network.Google.ServiceManagement.Services.Delete
    Network.Google.ServiceManagement.Services.GenerateConfigReport
    Network.Google.ServiceManagement.Services.Get
    Network.Google.ServiceManagement.Services.GetConfig
    Network.Google.ServiceManagement.Services.GetIamPolicy
    Network.Google.ServiceManagement.Services.List
    Network.Google.ServiceManagement.Services.Rollouts.Create
    Network.Google.ServiceManagement.Services.Rollouts.Get
    Network.Google.ServiceManagement.Services.Rollouts.List
    Network.Google.ServiceManagement.Services.SetIamPolicy
    Network.Google.ServiceManagement.Services.TestIamPermissions
    Network.Google.ServiceManagement.Services.Undelete
    Network.Google.ServiceManagement.Types

  other-modules:
    Network.Google.ServiceManagement.Internal.Product
    Network.Google.ServiceManagement.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
