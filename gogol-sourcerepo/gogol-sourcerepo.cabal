cabal-version:      2.2
name:               gogol-sourcerepo
version:            0.5.0
synopsis:           Google Cloud Source Repositories SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  Accesses source code repositories hosted by Google.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v1@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-sourcerepo

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.SourceRepo
    Network.Google.SourceRepo.Projects.GetConfig
    Network.Google.SourceRepo.Projects.Repos.Create
    Network.Google.SourceRepo.Projects.Repos.Delete
    Network.Google.SourceRepo.Projects.Repos.Get
    Network.Google.SourceRepo.Projects.Repos.GetIamPolicy
    Network.Google.SourceRepo.Projects.Repos.List
    Network.Google.SourceRepo.Projects.Repos.Patch
    Network.Google.SourceRepo.Projects.Repos.SetIamPolicy
    Network.Google.SourceRepo.Projects.Repos.Sync
    Network.Google.SourceRepo.Projects.Repos.TestIamPermissions
    Network.Google.SourceRepo.Projects.UpdateConfig
    Network.Google.SourceRepo.Types

  other-modules:
    Network.Google.SourceRepo.Internal.Product
    Network.Google.SourceRepo.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
