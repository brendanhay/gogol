cabal-version:      2.2
name:               gogol-websecurityscanner
version:            0.5.0
synopsis:           Google Web Security Scanner SDK.
homepage:           https://github.com/brendanhay/gogol
bug-reports:        https://github.com/brendanhay/gogol/issues
license:            MPL-2.0
license-file:       LICENSE
author:             Brendan Hay
maintainer:         Brendan Hay <brendan.g.hay+gogol@gmail.com>
copyright:          Copyright (c) 2015-2022 Brendan Hay
category:           Google
build-type:         Simple
extra-source-files:
  README.md
  src/.gitkeep

description:
  Scans your Compute and App Engine apps for common web vulnerabilities.
  .
  /Warning:/ This is an experimental prototype/preview release which is still
  under exploratory development and not intended for public use, caveat emptor!
  .
  This library is compatible with version @v1@
  of the API.

source-repository head
  type:     git
  location: git://github.com/brendanhay/gogol.git
  subdir:   gogol-websecurityscanner

flag no-field-selectors
  description: If field selectors should be omitted, requires GHC >=9.2
  default:     True

library
  default-language: Haskell2010
  hs-source-dirs:   src gen
  ghc-options:
    -Wall -fwarn-incomplete-uni-patterns
    -fwarn-incomplete-record-updates -funbox-strict-fields

  if (flag(no-field-selectors) && impl(ghc >=9.1))
    default-extensions: NoFieldSelectors

  exposed-modules:
    Network.Google.WebSecurityScanner
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.Create
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.Delete
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.Get
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.List
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.Patch
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.ScanRuns.CrawledUrls.List
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.ScanRuns.Findings.Get
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.ScanRuns.Findings.List
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.ScanRuns.FindingTypeStats.List
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.ScanRuns.Get
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.ScanRuns.List
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.ScanRuns.Stop
    Network.Google.WebSecurityScanner.Projects.ScanConfigs.Start
    Network.Google.WebSecurityScanner.Types

  other-modules:
    Network.Google.WebSecurityScanner.Internal.Product
    Network.Google.WebSecurityScanner.Internal.Sum

  build-depends:
    , base        >=4.12  && <5
    , gogol-core  >=0.5.0 && <0.5.1
