#!/usr/bin/env bash

# Usage: format-haskell

set -euo pipefail

cd "$(dirname "${BASH_SOURCE[0]}")/.."

echo "Formatting Cabal."

find lib/gogol* \
  -type f -name '*.cabal' \
  -exec cabal-fmt --inplace --indent=2 {} \+

echo "Formatting Haskell."

find gen lib/gogol* \
  -type f -name '*.hs' \
  -exec ormolu --mode=inplace \
  -o '-XPatternSynonyms' \
  -o '-XTypeApplications' \
  {} \+
